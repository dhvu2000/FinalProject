<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.WelcomeScreen.CreateAccountScreen"
    android:orientation="vertical"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#00FFFFFF"
            android:text=" Trở lại"
            android:textSize="14dp"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txtNameApp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GYM LIFE"
        android:textSize="24dp"
        android:textColor="#ECBB0D"
        android:textStyle="italic|bold"
        android:textAlignment="center"
        android:shadowColor="#000"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="1.5" />


    <TextView
        android:id="@+id/txtQuestion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên người dùng"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/white"
        android:textSize="16dp"/>
    <EditText
        android:id="@+id/txtUserName"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:background="@drawable/rounded_white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/txtQuestion2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/white"
        android:textSize="16dp"/>
    <EditText
        android:id="@+id/txtEmail"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:background="@drawable/rounded_white"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/white"
        android:textSize="16dp"/>
    <EditText
        android:id="@+id/txtPassword"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:background="@drawable/rounded_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác nhận lại mật khẩu: "
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/white"
        android:textSize="16dp"/>
    <EditText
        android:id="@+id/txtRePassword"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:background="@drawable/rounded_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/txtQuestion3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày sinh:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/white"
        android:textSize="16dp"/>
    <TextView
        android:id="@+id/txtDOB"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:background="@drawable/rounded_white"
        android:layout_width="match_parent"
        android:textColor="@color/black"
        android:layout_height="50dp"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/txtQuestion4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới tính:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="35dp"
        android:textColor="@color/white"
        android:textSize="16dp"/>
    <RadioGroup
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/choiceMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_marginEnd="50dp"
            android:checked="true"/>
        <RadioButton
            android:id="@+id/choiceFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nữ"
            android:textColor="@color/white"
            android:textSize="16dp"/>

    </RadioGroup>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDone"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hoàn thành"
        android:background="@drawable/roundedbutton"/>


</LinearLayout>